import re

def transform_readme(file_path):
    try:
        # Open the file and read its content
        with open(file_path, 'r', encoding='utf-8') as file:
            text = file.read()

        # Define regex patterns for the transformations
        patterns = [
            (r'^\s*- What is (.*?[\.\?!])', r'### What is \1'),  # Match "What is"
            (r'^\s*- The purpose of the function:(.*?)$', r'### The purpose of the function:\1'),  # Match "The purpose of the function"
            (r'^\s*- Function Argument\(s\):(.*?)$', r'### Function Argument(s):\1'),  # Match "Function Argument(s)"
            (r'^\s*- The Environment:(.*?)$', r'### The Environment:\1'),  # Match "The Environment"
            (r'^\s*-\s*:.*$', '')  # Match "- :" and delete the line
        ]

        # Apply all patterns to the text
        for pattern, replacement in patterns:
            text = re.sub(pattern, replacement, text, flags=re.MULTILINE)

        # Write the transformed content back to the file
        with open(file_path, 'w', encoding='utf-8') as file:
            file.write(text)

        print("File updated successfully!")

    except Exception as e:
        print(f"An error occurred: {e}")

# Path to your README.md file
file_path = r"D:\ALDS1_Project1\README.md"

transform_readme(file_path)
